<p id="notice"><%= notice %></p>

<h1 class="text-center">Products Admin</h1>

<%# customized table %>
<table class="products table-borderless">
  <thead>
    <tr>
      <th class="text-center">Image</th>
      <th class="text-center">Description</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list_line_even', 'list_line_odd') %>">
        <td><%= image_tag product.image, :class => "list_image" %></td>
        <td class="list_description">
          <dl>
            <dt><%= product.name %></dt>
            <dd><%= product.description %></dd>
            <dd><%= product.price %></dd>
          </dl>
        </td>

        <td class="list_actions">
          <dt><%= link_to 'Show', product %></dt>
          <dt><%= link_to 'Edit', edit_product_path(product) %></dt>
          <dt><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></dt>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

